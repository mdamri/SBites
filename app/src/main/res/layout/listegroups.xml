<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <!--  Header  Starts-->

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/chatroom"

            />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/avatar"
            android:textSize="24dp"
            android:text="Liste des groupes"
            />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/Add"
            android:id="@+id/button2"
            android:onClick="AjoutGroup"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/actualiser3"
            android:id="@+id/actualiser"
            android:onClick="ActualiserConnection"
            android:layout_alignParentEnd="true" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView"
            android:fastScrollEnabled="true"
            android:dividerHeight="1dp"
            android:layout_alignParentStart="true"
            android:divider="#b5b5ae"
            android:layout_below="@+id/avatar"
            android:background="@color/white"/>
        <!--  Header Ends -->


        <!-- Registration Form -->
        <!-- Registration Form Ends -->
    </RelativeLayout>
</ScrollView>