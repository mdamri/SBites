<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/houmti">

        <!--  Header  Starts-->

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/chatroom"

            />

        <TextView
            android:id="@+id/pseudo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/avatar"
            android:layout_alignTop="@+id/avatar"
            android:textSize="20dp"
            android:text="Pseudo Name"
            />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_alignLeft="@+id/pseudo"
            android:layout_below="@+id/pseudo"
            android:textSize="18dp"
            android:text="Welcom to houmty"
            />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/add"
            android:id="@+id/button2"
            android:onClick="AjoutGroup"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You can add your own group !!"
            android:id="@+id/textView3"
            android:layout_alignParentStart="true"
            android:textStyle="normal"
            android:textSize="20dp"
            android:textColor="@android:color/background_dark"
            android:layout_alignBottom="@+id/button2"
            android:layout_toStartOf="@+id/button2"
            android:layout_alignTop="@+id/button2"
            android:background="@android:color/darker_gray" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView"
            android:fastScrollEnabled="true"
            android:dividerHeight="1dp"
            android:layout_alignParentStart="true"
            android:divider="#b5b5ae"
            android:layout_below="@+id/avatar"
            android:layout_above="@+id/button2" />
        <!--  Header Ends -->


        <!-- Registration Form -->
        <!-- Registration Form Ends -->
    </RelativeLayout>
</ScrollView>